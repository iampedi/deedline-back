// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int            @id @default(autoincrement())
  username      String?
  email         String         @unique
  password      String
  contributions Contribution[]
  createdAt     DateTime       @default(now())
}

enum ContentType {
  BOOK
  MOVIE
  PODCAST
  MUSIC
  PAGE
}

model Content {
  id            Int            @id @default(autoincrement())
  title         String
  type          ContentType
  description   String?
  link          String
  contributions Contribution[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Contribution {
  id          Int          @id @default(autoincrement())
  contentId   Int?
  content     Content?     @relation(fields: [contentId], references: [id])
  userId      Int
  user        User         @relation(fields: [userId], references: [id])
  title       String?
  type        ContentType?
  description String?
  link        String?
  createdAt   DateTime     @default(now())
}
